page {
  background-color: #f5f5f5;
}
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .title {
  border-radius: 5px;
  width: 90%;
  height: 100px;
  background-color: #fff;
  margin: 25px 0px 25px 0px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.container .title .logo,
.container .title .tag {
  width: 75px;
  height: 75px;
  border-radius: 50px;
}
.container .title .person-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.container .title .person-info .userName {
  font-weight: 700;
  margin-bottom: 10px;
}
.container .title .tag {
  line-height: 75px;
  font-size: 24px;
}
.container .year-container,
.container .month-container {
  width: 90%;
  background-color: #fff;
  border-radius: 5px;
}
.container .year-container {
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.container .year-container .uni-icons {
  margin-left: 10px;
  margin-right: 10px;
}
.container .month-list {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  border: 1px solid #f5f5f5;
}

